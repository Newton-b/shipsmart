# ShipSmart Tracking Microservice Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration (MongoDB)
DB_HOST=localhost
DB_PORT=27017
DB_USERNAME=
DB_PASSWORD=
DB_NAME=shipment_tracking

# Redis Configuration (for caching and SSE)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# UPS API Configuration (demo/test keys - replace with real ones)
UPS_API_KEY=demo_ups_key
UPS_API_SECRET=demo:password
UPS_BASE_URL=https://onlinetools.ups.com/api

# FedEx API Configuration (demo/test keys - replace with real ones)
FEDEX_API_KEY=demo_fedex_client_id
FEDEX_API_SECRET=demo_fedex_client_secret
FEDEX_BASE_URL=https://apis.fedex.com

# Maersk API Configuration (demo/test keys - replace with real ones)
MAERSK_API_KEY=demo_maersk_key
MAERSK_API_SECRET=demo_maersk_token
MAERSK_BASE_URL=https://api.maersk.com

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Rate Limiting
DEFAULT_RATE_LIMIT_PER_MINUTE=1000
UPS_RATE_LIMIT_PER_MINUTE=1000
FEDEX_RATE_LIMIT_PER_MINUTE=500
MAERSK_RATE_LIMIT_PER_MINUTE=200

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=development_jwt_secret_key_change_in_production
API_KEY_HEADER=X-API-Key

# Monitoring and Health Checks
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
