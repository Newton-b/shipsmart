<div class="max-w-4xl mx-auto">
    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
            Track Your Shipments
        </h1>
        <p class="text-xl text-gray-600 mb-8">
            Real-time tracking across multiple carriers including UPS, FedEx, and Maersk
        </p>
    </div>

    <!-- Error Display -->
    <% if (error) { %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-circle text-red-400"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">Error</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <%= error %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Tracking Form -->
    <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <form action="/track" method="POST" data-tracking-form class="space-y-6">
            <div>
                <label for="trackingNumber" class="block text-sm font-medium text-gray-700 mb-2">
                    Tracking Number
                </label>
                <input 
                    type="text" 
                    id="trackingNumber" 
                    name="trackingNumber" 
                    required
                    placeholder="Enter tracking number (e.g., 1Z999AA1234567890)"
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg"
                >
            </div>

            <div>
                <label for="carrierCode" class="block text-sm font-medium text-gray-700 mb-2">
                    Carrier (Optional - Auto-detect if not selected)
                </label>
                <select 
                    id="carrierCode" 
                    name="carrierCode"
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
                    <option value="">Auto-detect carrier</option>
                    <% carriers.forEach(carrier => { %>
                        <option value="<%= carrier.carrierCode %>">
                            <%= carrier.carrierName %> (<%= carrier.carrierCode %>)
                        </option>
                    <% }); %>
                </select>
            </div>

            <button 
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors font-medium text-lg"
            >
                <i class="fas fa-search mr-2"></i>
                Track Shipment
            </button>
        </form>
    </div>

    <!-- Features Section -->
    <div class="grid md:grid-cols-3 gap-8 mb-12">
        <div class="text-center">
            <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-shipping-fast text-blue-600 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Multi-Carrier Support</h3>
            <p class="text-gray-600">Track shipments across UPS, FedEx, Maersk, and more carriers</p>
        </div>

        <div class="text-center">
            <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-sync-alt text-green-600 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Real-Time Updates</h3>
            <p class="text-gray-600">Get live tracking updates with Server-Sent Events</p>
        </div>

        <div class="text-center">
            <div class="bg-purple-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-list text-purple-600 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Batch Tracking</h3>
            <p class="text-gray-600">Track multiple shipments at once for efficiency</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-gray-100 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
        <div class="flex flex-wrap gap-4">
            <a href="/batch" class="bg-white px-4 py-2 rounded-md shadow-sm hover:shadow-md transition-shadow text-gray-700 hover:text-gray-900">
                <i class="fas fa-layer-group mr-2"></i>
                Batch Tracking
            </a>
            <a href="/health" class="bg-white px-4 py-2 rounded-md shadow-sm hover:shadow-md transition-shadow text-gray-700 hover:text-gray-900">
                <i class="fas fa-heartbeat mr-2"></i>
                System Health
            </a>
            <a href="/api/docs" target="_blank" class="bg-white px-4 py-2 rounded-md shadow-sm hover:shadow-md transition-shadow text-gray-700 hover:text-gray-900">
                <i class="fas fa-code mr-2"></i>
                API Documentation
            </a>
        </div>
    </div>

    <!-- Sample Tracking Numbers -->
    <div class="mt-8 text-center">
        <p class="text-sm text-gray-500 mb-2">Try these sample tracking numbers:</p>
        <div class="flex flex-wrap justify-center gap-2">
            <button onclick="document.getElementById('trackingNumber').value='1Z999AA1234567890'" class="text-xs bg-gray-200 hover:bg-gray-300 px-2 py-1 rounded">
                1Z999AA1234567890 (UPS)
            </button>
            <button onclick="document.getElementById('trackingNumber').value='123456789012'" class="text-xs bg-gray-200 hover:bg-gray-300 px-2 py-1 rounded">
                123456789012 (FedEx)
            </button>
            <button onclick="document.getElementById('trackingNumber').value='MAEU1234567'" class="text-xs bg-gray-200 hover:bg-gray-300 px-2 py-1 rounded">
                MAEU1234567 (Maersk)
            </button>
        </div>
    </div>
</div>
