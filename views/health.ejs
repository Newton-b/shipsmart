<div class="max-w-6xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">System Health</h1>
        <p class="text-gray-600">Monitor the status of all system components and services</p>
    </div>

    <!-- Back Navigation -->
    <div class="mb-6">
        <a href="/" class="text-blue-600 hover:text-blue-800 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Tracking
        </a>
    </div>

    <!-- Overall Status -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-xl font-semibold text-gray-900">Overall System Status</h2>
                <p class="text-gray-600 mt-1">Last updated: <%= new Date().toLocaleString() %></p>
            </div>
            <div class="flex items-center">
                <% if (health.status === 'healthy') { %>
                    <div class="flex items-center text-green-600">
                        <i class="fas fa-check-circle text-2xl mr-2"></i>
                        <span class="text-lg font-semibold">All Systems Operational</span>
                    </div>
                <% } else if (health.status === 'degraded') { %>
                    <div class="flex items-center text-yellow-600">
                        <i class="fas fa-exclamation-triangle text-2xl mr-2"></i>
                        <span class="text-lg font-semibold">Degraded Performance</span>
                    </div>
                <% } else { %>
                    <div class="flex items-center text-red-600">
                        <i class="fas fa-times-circle text-2xl mr-2"></i>
                        <span class="text-lg font-semibold">System Issues Detected</span>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Service Status Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Database Status -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-database mr-2"></i>
                    MongoDB Database
                </h3>
                <% if (health.database.status === 'healthy') { %>
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                <% } else { %>
                    <i class="fas fa-times-circle text-red-500 text-xl"></i>
                <% } %>
            </div>
            <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-600">Status:</span>
                    <span class="<%= health.database.status === 'healthy' ? 'text-green-600' : 'text-red-600' %> font-medium">
                        <%= health.database.status === 'healthy' ? 'Connected' : 'Disconnected' %>
                    </span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Response Time:</span>
                    <span class="text-gray-900"><%= health.database.responseTime %>ms</span>
                </div>
                <% if (health.database.collections) { %>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Collections:</span>
                        <span class="text-gray-900"><%= health.database.collections %></span>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Cache Status -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-memory mr-2"></i>
                    Cache System
                </h3>
                <% if (health.cache.status === 'healthy') { %>
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                <% } else { %>
                    <i class="fas fa-exclamation-triangle text-yellow-500 text-xl"></i>
                <% } %>
            </div>
            <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-600">Type:</span>
                    <span class="text-gray-900"><%= health.cache.type %></span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Status:</span>
                    <span class="<%= health.cache.status === 'healthy' ? 'text-green-600' : 'text-yellow-600' %> font-medium">
                        <%= health.cache.status === 'healthy' ? 'Connected' : 'Fallback Mode' %>
                    </span>
                </div>
                <% if (health.cache.hitRate) { %>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Hit Rate:</span>
                        <span class="text-gray-900"><%= health.cache.hitRate %>%</span>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- API Status -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-server mr-2"></i>
                    API Service
                </h3>
                <% if (health.api.status === 'healthy') { %>
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                <% } else { %>
                    <i class="fas fa-times-circle text-red-500 text-xl"></i>
                <% } %>
            </div>
            <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-600">Uptime:</span>
                    <span class="text-gray-900"><%= health.api.uptime %></span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Memory Usage:</span>
                    <span class="text-gray-900"><%= health.api.memoryUsage %>MB</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">CPU Usage:</span>
                    <span class="text-gray-900"><%= health.api.cpuUsage %>%</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Carrier Services Status -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-truck mr-2"></i>
            Carrier Services
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% health.carriers.forEach(carrier => { %>
                <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-center justify-between mb-3">
                        <h4 class="font-semibold text-gray-900"><%= carrier.name %></h4>
                        <% if (carrier.status === 'healthy') { %>
                            <i class="fas fa-check-circle text-green-500"></i>
                        <% } else if (carrier.status === 'degraded') { %>
                            <i class="fas fa-exclamation-triangle text-yellow-500"></i>
                        <% } else { %>
                            <i class="fas fa-times-circle text-red-500"></i>
                        <% } %>
                    </div>
                    <div class="space-y-1 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Status:</span>
                            <span class="<%= carrier.status === 'healthy' ? 'text-green-600' : carrier.status === 'degraded' ? 'text-yellow-600' : 'text-red-600' %> font-medium">
                                <%= carrier.status %>
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Response Time:</span>
                            <span class="text-gray-900"><%= carrier.responseTime %>ms</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Success Rate:</span>
                            <span class="text-gray-900"><%= carrier.successRate %>%</span>
                        </div>
                        <% if (carrier.circuitBreakerState) { %>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Circuit Breaker:</span>
                                <span class="<%= carrier.circuitBreakerState === 'CLOSED' ? 'text-green-600' : 'text-red-600' %> font-medium">
                                    <%= carrier.circuitBreakerState %>
                                </span>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- System Metrics -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-chart-line mr-2"></i>
            System Metrics (Last 24 Hours)
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="bg-blue-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-blue-600"><%= health.metrics.totalRequests %></div>
                <div class="text-sm text-blue-800">Total Requests</div>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-green-600"><%= health.metrics.successfulRequests %></div>
                <div class="text-sm text-green-800">Successful</div>
            </div>
            <div class="bg-red-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-red-600"><%= health.metrics.failedRequests %></div>
                <div class="text-sm text-red-800">Failed</div>
            </div>
            <div class="bg-yellow-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-yellow-600"><%= health.metrics.averageResponseTime %>ms</div>
                <div class="text-sm text-yellow-800">Avg Response Time</div>
            </div>
        </div>
    </div>

    <!-- Recent Issues -->
    <% if (health.recentIssues && health.recentIssues.length > 0) { %>
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-exclamation-triangle text-yellow-500 mr-2"></i>
                Recent Issues
            </h3>
            <div class="space-y-3">
                <% health.recentIssues.forEach(issue => { %>
                    <div class="border-l-4 border-yellow-400 bg-yellow-50 p-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-yellow-800"><%= issue.title %></p>
                                <p class="text-sm text-yellow-700 mt-1"><%= issue.description %></p>
                            </div>
                            <div class="text-sm text-yellow-600">
                                <%= new Date(issue.timestamp).toLocaleString() %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    <% } %>

    <!-- Actions -->
    <div class="flex flex-wrap gap-4">
        <button onclick="location.reload()" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
            <i class="fas fa-sync-alt mr-2"></i>
            Refresh Status
        </button>
        <a href="/" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors">
            <i class="fas fa-home mr-2"></i>
            Back to Home
        </a>
        <a href="/batch" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
            <i class="fas fa-layer-group mr-2"></i>
            Batch Tracking
        </a>
    </div>

    <!-- Auto-refresh notice -->
    <div class="mt-8 text-center text-sm text-gray-500">
        <i class="fas fa-info-circle mr-1"></i>
        This page automatically refreshes every 30 seconds to show the latest status
    </div>
</div>

<script>
    // Auto-refresh every 30 seconds
    setTimeout(() => {
        location.reload();
    }, 30000);
</script>
